<div class="head">
  <h1><%= @line.name %></h1>
  <p><%= link_to "Edit", edit_line_path(@line), :class => "btn btn-default" %></p>
  <p><%= link_to "Delete", line_path(@line),
                           :data => {:confirm => "You sure?",
                                     :method => "delete"},
                           :class => "btn btn-danger" %></p>
  <p><%= link_to "Go back", lines_path %></p>
</div>

<div class="content">
  <h3>Stations</h3>
  <ul>
    <% @line.stations.each do |station| %>
      <li><%= link_to station.name, station_path(station) %></li>
    <% end %>
  </ul>
</div>




